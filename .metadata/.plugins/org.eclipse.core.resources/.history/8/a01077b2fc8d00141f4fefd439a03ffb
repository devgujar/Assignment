package TestSuite.RuleMgr;

/*
 * Log in as Publisher using Administrator details and Verify Deal listing UI 
 */

import org.junit.Assert;
import org.junit.Test;
import org.openqa.selenium.By;
import LibraryPackage.Project_Interface_Definations;

public class TC_Publisher_With_Admin_Rights_VerifyDeleteRuleErrorMessage extends Project_Interface_Definations{
	 
	@Test
	 public void Verify_Deal_Listing_Page() throws Exception {
			LogIn_As_Publisher_Using_Admin_Rights("admin@pubmatic.com","test","24011"); 			
			//Navigate to Rule Manager
			driver.findElement(By.linkText("Rules")).click();
			
			//Verify Delete rule error message: Please select a rule to Delete
			driver.findElement(By.xpath("//a[@id='deleteRule']")).click();
			String ERROR_MESSAGE= driver.findElement(By.xpath("//div[@class='PMUI_message_content']")).getText();
			Assert.assertTrue("Delete rule error message is not matching ", ERROR_MESSAGE.equals("Please select a rule to Delete"));
								
		    //Cleaning Code
			driver.quit();
	}
}
	 

