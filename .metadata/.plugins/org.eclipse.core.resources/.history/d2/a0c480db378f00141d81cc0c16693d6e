package TestSuite.test_demo;
import java.io.File;
import java.io.FileInputStream;
import java.io.InputStream;

import junit.framework.Assert;

import org.apache.bcel.generic.Select;
import org.apache.commons.io.FileUtils;
import org.junit.Test;
import org.openqa.selenium.By;

import LibraryPackage.Project_Interface_Definations;

public class test_demo extends Project_Interface_Definations{
	
	@Test
	public void Get_register_on_rtMedia() throws Exception {
		
			start_setup() ;
		
			String test_data_sheet_path="src/TestSuite/Get_register_on_rtMedia/Get_register_on_rtMedia.xls";
			
		    driver.findElement(By.xpath("//a[contains(.,'Login')]")).click();
		    driver.findElement(By.xpath("//a[contains(.,'Register')]")).click();
  
		    driver.findElement(By.id("signup_username")).sendKeys(GetExcell_Varible_Value(test_data_sheet_path, "signup_username"));
		    driver.findElement(By.id("signup_email")).sendKeys(GetExcell_Varible_Value(test_data_sheet_path, "signup_email"));
		    driver.findElement(By.id("signup_password")).sendKeys(GetExcell_Varible_Value(test_data_sheet_path, "signup_password"));
		    driver.findElement(By.id("signup_password_confirm")).sendKeys(GetExcell_Varible_Value(test_data_sheet_path, "signup_password"));
		    driver.findElement(By.id("field_1")).sendKeys(GetExcell_Varible_Value(test_data_sheet_path, "Name"));
		    driver.findElement(By.id("field_2")).sendKeys(GetExcell_Varible_Value(test_data_sheet_path, "city"));
		    driver.findElement(By.xpath("//option[@value='"+  GetExcell_Varible_Value(test_data_sheet_path, "gender") + "']")).click();	    		    
		    driver.findElement(By.xpath("//select[@id='field_4_day']//option[@value='"+GetExcell_Varible_Value(test_data_sheet_path, "birthdate_field_4_day")+"']")).click();  
		    driver.findElement(By.xpath("//select[@id='field_4_month']//option[@value='"+GetExcell_Varible_Value(test_data_sheet_path, "birthdate_field_4_month")+"']")).click();  
		    driver.findElement(By.xpath("//select[@id='field_4_year']//option[@value='"+GetExcell_Varible_Value(test_data_sheet_path, "birthdate_field_4_year")+"']")).click();  
	    	driver.findElement(By.name("bp-security-check")).sendKeys(""+Get_security_Answer_for_SignUp_Page());
	    	driver.findElement(By.xpath("//input[@id='signup_submit']")).click();	    		    
	    	
	    	//Verify success Message
	    	String expected="You have successfully created your account! To begin using this site you will need to activate your account via the email we have just sent to your address.";	    	
	    	String actual=driver.findElement(By.xpath("//form[@id='signup_form']/p")).getText();
	    	Assert.assertEquals(expected, actual);
	  }

}
