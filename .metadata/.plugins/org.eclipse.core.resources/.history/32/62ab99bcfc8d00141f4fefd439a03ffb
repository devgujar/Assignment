package PracticeGenralProgramming;

import java.io.*;
	
	public class Fileoi_readWrite_Simple2 {

		public static void main(String args[]) throws IOException
		   {
		      FileReader in = new FileReader("d:\\input.txt");
		      FileWriter out =new FileWriter("d:\\output.txt");	
		      int c;
		      
		      while ((c = in.read()) != -1) 
				  {
					out.write(c);
				  }

		      in.close();
		      out.close();			  
				  
		      }
	}
