package LibraryPackage;
import LibraryPackage.*;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.*;
import org.junit.Test;

public class Connect_To_MysqlDB {
	
	@Test
	public void ReadXmlData() throws Exception {  
	
		Class.forName("com.mysql.jdbc.Driver"); //Get driver class
		
		Connection con = DriverManager.getConnection("jdbc:mysql://127.0.0.1:3306/oce_db","root",""); //connection string
		Statement stmt = con.createStatement();  // statement object
		ResultSet rs = stmt.executeQuery("select * from testlist");  //get data in result-set.
		
		while (rs.next()) {	
			System.out.println(rs.getString(1)+ "  " +rs.getString(2) );
		}	
	con.close();
	}  
}
